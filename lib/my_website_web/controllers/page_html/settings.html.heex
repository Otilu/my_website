<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Kakwara Hospital Admin Settings</title>
  <style>
    :root {
      --primary: rgb(26, 123, 168);
      --dark: #1e293b;
      --light: #f1f5f9;
      --text: #0f172a;
      --card: #ffffff;
      --bg-dark: #0f172a;
      --bg-light: #f8fafc;
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family:system-ui, -apple-system, BlinkMacSystemFont, 
      'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      background: var(--light);
      color: var(--text);
      display: flex;
      min-height: 100vh;
      transition: background 0.3s, color 0.3s;
    }

    body.dark {
      background: var(--bg-dark);
      color: #f8fafc;
    }

    .sidebar {
      width: 260px;
      background: var(--dark);
      color: white;
      padding: 1rem;
      display: flex;
      flex-direction: column;
    }

    .sidebar h2 {
      font-size: 1.4rem;
      margin-bottom: 1.5rem;
    }

    .sidebar nav a {
      color: white;
      padding: 0.8rem;
      display: block;
      text-decoration: none;
      border-radius: 6px;
      transition: background 0.2s;
    }

    .sidebar nav a:hover {
      background: #334155;
    }

    .main {
      flex-grow: 1;
      padding: 2rem;
      overflow-y: auto;
    }

    .section {
      background: var(--card);
      padding: 1.5rem;
      border-radius: 10px;
      margin-bottom: 2rem;
      box-shadow: 0 2px 6px rgba(0,0,0,0.05);
      transition: background 0.3s;
    }

    body.dark .section {
      background: #1e293b;
    }

    .section h3 {
      margin-top: 0;
      margin-bottom: 1rem;
      border-left: 4px solid var(--primary);
      padding-left: 0.75rem;
      font-size: 1.2rem;
      cursor: pointer;
    }

    .grid-2, .grid-3 {
      display: grid;
      gap: 1rem;
    }

    .grid-2 {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }

    .grid-3 {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }

    label {
      font-weight: 600;
      display: block;
      margin-bottom: 0.3rem;
    }

    input, select, textarea {
      width: 100%;
      padding: 0.6rem;
      border: 1px solid #cbd5e1;
      border-radius: 6px;
      font-size: 1rem;
    }

    .tabs {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .tabs button {
      background: #e2e8f0;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }

    .tabs button.active {
      background: var(--primary);
      color: white;
    }

    .btn {
      background: var(--primary);
      color: white;
      padding: 0.6rem 1.2rem;
      border: none;
      border-radius: 6px;
      margin-top: 1rem;
      cursor: pointer;
    }

    .dark-toggle {
      position: absolute;
      top: 1rem;
      right: 1rem;
      cursor: pointer;
    }

    .collapsible {
      display: none;
    }

    .collapsible.open {
      display: block;
    }

    @media (max-width: 768px) {
      .sidebar {
        display: none;
      }
      body {
        flex-direction: column;
      }
      .main {
        padding: 1rem;
      }
    }
  </style>
</head>
<body>
  <aside class="sidebar">
    <h2>‚öôÔ∏è Kakwara Admin</h2>
    <nav>
      <a href={~p"/main"} 
   style="
      display: inline-block;
      margin-bottom: rem;
      background: transparent;
      color: #fff;
      padding: 0.6rem 1rem;
      border-radius: 6px;
      text-decoration: none;
      font-weight: 600;
      font-size: 1.05rem;
      transition: background 0.2s;
   ">
   <i class="fa-solid fa-house"></i> Home
</a>
      <a href="#">Dashboard</a>
      <a href="#">Hospital Info</a>
      <a href="#">Users</a>
      <a href="#">Departments</a>
      <a href="#">Billing</a>
   
    </nav>
  </aside>

  <main class="main">
    <button class="dark-toggle btn" onclick="toggleDarkMode()">üåì Toggle Dark Mode</button>

    <div class="section">
      <h3 onclick="toggleCollapse(this)">üè• Hospital Info</h3>
      <div class="collapsible open">
        <div class="grid-2">
          <div><label>Hospital Name</label><input type="text" value="Kakwara Hospital"></div>
          <div><label>Branch Code</label><input type="text" value="KAK-001"></div>
          <div><label>Phone</label><input type="tel" value="+256 700 123 456"></div>
          <div><label>Email</label><input type="email" value="admin@kakwarahospital.org"></div>
          <div><label>Working Hours</label><input type="text" value="Mon‚ÄìFri: 8am‚Äì8pm"></div>
          <div><label>Upload Logo</label><input type="file"></div>
        </div>
      </div>
    </div>

    <div class="section">
      <h3 onclick="toggleCollapse(this)">üë• User Management</h3>
      <div class="collapsible open">
        <div class="tabs">
          <button class="active" onclick="setTab(this)">Roles</button>
          <button onclick="setTab(this)">Permissions</button>
          <button onclick="setTab(this)">2FA</button>
        </div>
        <div class="grid-3">
          <div><label>Default Role</label><select><option>Admin</option><option>Doctor</option></select></div>
          <div><label>Enable 2FA</label><select><option>Enabled</option><option>Disabled</option></select></div>
          <div><label>Login IP</label><input type="text" placeholder="192.168.1.10"></div>
        </div>
      </div>
    </div>

    <div class="section">
      <h3 onclick="toggleCollapse(this)">üè• Departments</h3>
      <div class="collapsible open">
        <div class="grid-2">
          <div><label>Department</label><select><option>General</option><option>Radiology</option></select></div>
          <div><label>Consult Time</label><input type="number" value="30"></div>
          <div><label>HOD</label><input type="text" placeholder="Dr. Namutebi"></div>
        </div>
      </div>
    </div>

    <div class="section">
      <h3 onclick="toggleCollapse(this)">üí≥ Billing & Finance</h3>
      <div class="collapsible open">
        <div class="grid-3">
          <div><label>Currency</label><select><option>UGX</option><option>USD</option></select></div>
          <div><label>Insurance</label><select><option>Yes</option><option>No</option></select></div>
          <div><label>Tax Rate</label><input type="number" value="18"></div>
        </div>
      </div>
    </div>

    <button class="btn">üíæ Save All Changes</button>
  </main>

  <script>
    function toggleDarkMode() {
      document.body.classList.toggle("dark");
    }

    function toggleCollapse(header) {
      const panel = header.nextElementSibling;
      panel.classList.toggle("open");
    }

    function setTab(button) {
      const tabs = button.parentElement.querySelectorAll('button');
      tabs.forEach(tab => tab.classList.remove('active'));
      button.classList.add('active');
      // Add more logic for tab content if needed
    }
  </script>
</body>
</html>
